<div class="card">
  <div class="card-body">
    <h4>Novo Parceiro: </h4>
    <hr>
    <form action="/admin/parceiros/novo" method="POST" enctype="multipart/form-data">
      <label for="corporatename">Nome da Empresa: </label>
      <input type="text" name="corporatename"class="form-control" required>
      <label for="redesocial">Rede Social: </label>
      <input type="text" name="redesocial" class="form-control" required>
      <label for="cnpj">CNPJ da Empresa: </label>
      <input type="text" id="cnpjInput"name="cnpj" class="form-control" required>
      <label for="describe">Sobre a Empresa:</label>
      <textarea name="describe" class="form-control" style="height: 200px;"></textarea>
      
      <label for="image">Escolha uma foto: </label>
      <input type="file" name="image" class="form-control">
      <button type="submit" class="btn btn-success mt-4">Cadastrar</button>
    </form>
  </div>
</div>

<script>
 const cnpjInput = document.getElementById('cnpjInput');

cnpjInput.addEventListener('input', formatarCNPJ);

function formatarCNPJ() {
  let cnpj = cnpjInput.value;

  // Remove todos os caracteres que não são números
  cnpj = cnpj.replace(/\D/g, '');

  // Aplica a formatação do CNPJ (##.###.###/####-##
  if (cnpj.length <= 2) {
    cnpj = cnpj.replace(/^(\d{0,2})/, '$1');
  } else if (cnpj.length <= 5) {
    cnpj = cnpj.replace(/^(\d{0,2})(\d{0,3})/, '$1.$2');
  } else if (cnpj.length <= 8) {
    cnpj = cnpj.replace(/^(\d{0,2})(\d{0,3})(\d{0,3})/, '$1.$2.$3');
  } else if (cnpj.length <= 12) {
    cnpj = cnpj.replace(/^(\d{0,2})(\d{0,3})(\d{0,3})(\d{0,4})/, '$1.$2.$3/$4');
  } else {
    cnpj = cnpj.replace(/^(\d{0,2})(\d{0,3})(\d{0,3})(\d{0,4})(\d{0,2}).*/, '$1.$2.$3/$4-$5');
  }

  cnpjInput.value = cnpj;
}

</script>