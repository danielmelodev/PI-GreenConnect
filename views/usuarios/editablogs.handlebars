<div class="card">
  <div class="card-body">
    <h4>Alterar Artigo: </h4>
    <hr>
    <form action="/usuarios/blogs/edit" method="POST" enctype="multipart/form-data">
      <input type="hidden" value="{{blog._id}}" name="id">
      <label for="title">Titulo: </label>
      <input type="text" name="title"class="form-control" value="{{blog.title}}" required>
      <label for="name">Nome: </label>
      <input type="text" name="name" class="form-control" value="{{blog.name}}" required>
      <label for="text">Conte√∫do:</label>
      <textarea name="text" class="form-control">{{blog.text}}</textarea>
      <label for="image">Upload Image: </label>
      <input type="file" name="image" class="form-control">
      <img src="/uploads/{{blog.image}}" alt="..." class="my-3" height="150" width="150">
      <input type="hidden" name="old_image" value="{{blog.image}}">
      <br>
      <button type="submit" class="btn btn-success mt-4">Editar Artigo</button>
    </form>
  </div>
</div>